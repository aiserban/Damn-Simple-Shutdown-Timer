<Window x:Class="Damn_Simple_Shutdown_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Damn_Simple_Shutdown_Timer"
        mc:Ignorable="d"
        Title="Damn Simple Shutdown Timer" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="HourComboBox" HorizontalAlignment="Left" Margin="43,47,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="HourComboBox_SelectionChanged"/>
        <ComboBox x:Name="MinutesComboBox" HorizontalAlignment="Left" Margin="168,47,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="MinutesComboBox_SelectionChanged"/>
        <ComboBox x:Name="SecondsComboBox" HorizontalAlignment="Left" Margin="293,47,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="SecondsComboBox_SelectionChanged"/>
        <Button x:Name="StartTimerButton" Content="Start timer" HorizontalAlignment="Left" Margin="43,93,0,0" VerticalAlignment="Top" Width="75" Click="StartTimerButton_Click"/>
        <Button x:Name="CancelTimerButton" Content="Cancel timer" HorizontalAlignment="Left" Margin="338,93,0,0" VerticalAlignment="Top" Width="75" Click="CancelTimerButton_Click"/>
    </Grid>
</Window>
